<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:id="@+id/btn_hide_playmusic"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:foreground="?android:attr/selectableItemBackground"/>
    <ImageView
        android:id="@+id/icon_hide_playmusic"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/viewmore"
        android:rotation="90"
        android:layout_marginLeft="15dp"
        app:tint="#FFF" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_hide_playmusic"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textview_playmusic_namesong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Ten bai hat"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:maxLines="1"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans_semibold"/>
        <TextView
            android:id="@+id/textview_playmusic_namesinger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Ca si"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:maxLines="1"
            android:textStyle="italic"
            android:fontFamily="@font/open_sans"/>
    </LinearLayout>
</RelativeLayout>