<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".Activity.AdvertisementActivity">
    <ImageView
        android:id="@+id/img_background_act_adv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/category_test"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_background_act_adv"
        android:alpha="0.35"
        android:background="#FFF"
        android:src="@drawable/custom_background_banner" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_below="@id/img_background_act_adv"
        android:id="@+id/img_avt_act_adv"
        android:src="@drawable/topic_test"
        android:scaleType="fitXY"
        android:layout_marginTop="-38dp"
        android:layout_centerHorizontal="true"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dip"
        app:riv_border_color="#333333"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp"
        app:riv_oval="true"
        android:layout_height="100dp"
        android:layout_width="100dp" />
    <TextView
        android:layout_below="@id/img_avt_act_adv"
        android:id="@+id/textView_name_act_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="#673AB7"
        android:textSize="25sp"
        android:text="Uzumaki Naruto"
        />
    <ScrollView
        android:layout_below="@id/textView_name_act_adv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView_content_act_adv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Content\n\n\n\n\n\nsadasd\n\n\n\n\n\n\n\ndfsfsd\n\n\n\ngsfsdf"
                android:fontFamily="@font/open_sans"
                android:textSize="20sp"
                android:textColor="#673AB7"
                android:justificationMode="inter_word"
                />
        </LinearLayout>
    </ScrollView>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/btn_back_act_adv"
        android:scaleType="fitXY"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dip"
        app:riv_border_color="#333333"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp"
        app:riv_oval="true"
        android:src="@drawable/iconback"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="#673AB7"
        android:layout_width="40dp"
        android:layout_height="40dp">

    </com.makeramen.roundedimageview.RoundedImageView>


</RelativeLayout>