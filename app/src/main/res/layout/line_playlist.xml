<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#A468F6"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/imgBackgroundPlaylist"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="110dp"/>
        <View
            android:background="@drawable/custom_background_banner"
            android:layout_width="match_parent"
            android:layout_height="110dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAvatar"
        android:layout_alignBottom="@id/cardViewPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="25dp">
        <ImageView
            android:id="@+id/imgPlaylist"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewNamePlaylist"
        android:text="Tuyen tap nhung bai hat"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="#FFF"
        android:maxLines="1"
        android:ellipsize="end"
        android:elevation="2dp"
        android:layout_alignBottom="@id/cardViewAvatar"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/cardViewAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>