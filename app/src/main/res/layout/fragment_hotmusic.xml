<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeHotmusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_button_viewmore_topic"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/custom_button_home"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/textViewTitleHotmusic"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/viewmore"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imgICON"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_width="7dp"
            android:layout_height="20dp"
            android:background="#883CFF"/>

        <TextView
            android:layout_toRightOf="@id/imgICON"
            android:id="@+id/textViewTitleHotmusic"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="HOT MUSIC"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHotmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>